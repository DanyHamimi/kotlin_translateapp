<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="vertical"
            android:background="@color/teal_200"
            >


            <!-- Source language text view -->
            <TextView
                android:id="@+id/source_language_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Langue d'orgigine : "
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                />

            <!-- Destination language text view -->

            <!-- Word text view -->
            <TextView
                android:id="@+id/word_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/destination_language_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Langue de traduction "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/translated_word_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot traduit: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />

            <!-- Translated word text view -->

            <!-- Delete button -->
            <TextView
                android:id="@+id/websiteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site web: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
